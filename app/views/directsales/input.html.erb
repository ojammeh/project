                          <option value="<%= team.team_id %>"><%= team.team_id%> (<%= team.team_leader%>)</option> 
                    <%end%>
              </select>  <br><br> 

              <label for="teamtno">Team Transport Number: </label>
              <input id="teamtno" size="20" name="teamtno" required="required" type="text" placeholder="Transport Number"/>&#8195;

              <label for="destination">Destination: </label>
              <input id="destination" size="20" name="destination" required="required" type="text" placeholder="Destination"/>&#8195;

              <label for="ssno">Start Serial Number: </label>
              <input id="ssno" size="20" name="ssno" required="required" type="text" placeholder="Start Serial"/>&#8195;
              &#8195;<br><br> 

              <label for="esno">End Serial Number: </label>
              <input id="esno" size="20" name="esno" required="required" type="text" placeholder="End Serial"/>&#8195;
              &#8195;

              <label for="quantity">Sim Quantity: </label>
              <input id="quantity" size="7" name="quantity" required="required" onkeypress="return isNumberKey(event)" type="text" placeholder="Quantity"/>&#8195;

