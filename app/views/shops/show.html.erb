<div class="container">
<section>       
    <div id="container_demo" >

        <div id="wrapper">
            <div id="login" class="animate form">
             <center>
             <font color="green"><%=flash[:success]%></font><font color="red"><%=flash[:danger]%></font><br>
				<br/><br />

				<table>
					 <tr>
					  <th>Number</th>
					  <th>Full Name</th>
					  <th>Location</th>
					  <th>Delete</th>
					  <th>Edit</th>
					  <th>Delete Multiple</th>
					 </tr>
					  <% @shops.each do |shop| %>
					<tr>
					  <td><%= shop.msisdn %></td>
					  <td><%= shop.name %></td>
					  <td><%= shop.area %></td>
					  <td><%= link_to image_tag("delete.gif", alt: "delete"), {:controller => 'shops', :action => 'destroy_data', :id => shop.id }, :method => :post, data: { confirm: "Are you sure You want to delete?" } %></td>
        			  <td> <%= link_to image_tag("pencil.png", alt: "edit"), {:controller => 'shops', :action => 'edit', :id => shop.id }, :method => :get%></td>
