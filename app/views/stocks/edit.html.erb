<head>
<script type='text/javascript'>
function Validate(objForm) {
    var v1 = objForm.elements['initial_amount'].value;
    var v2 = objForm.elements['outs'].value;
    if (Math.abs(+v1 <= +v2)) {
        alert("Stock cannot be over exceeded");
        return false;
    }
    // alert('no duplicate, submit the form');
    return true;
}
</script>
</head>
