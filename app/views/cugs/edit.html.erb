<% provide(:title, "Edit CUG / BGO") %>
<h1>Update CUG / BGO</h1>
<div class="row">
	<div class="col-md-6 col-md-offset-3">
	<%= form_for(@cug, :url => {:action => 'update', :id => @cug.id}) do |f| %>
		<%= f.label :name %>
		<%= f.text_field :name, class: 'form-control' %>
		<%= f.label :monthly_charge %>
		<%= f.text_field :monthly_charge, class: 'form-control' %>
		<%= f.select :phone, options_for_select([['CUG'] , ['BGO']]) %>
		<%= f.label :Comment %>
		<%= f.text_field :comments, class: 'form-control' %>
		<%= f.submit "Save changes", class: "btn btn-primary" %>
	<% end %>
	</div>
</div>	

